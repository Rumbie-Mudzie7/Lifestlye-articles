<div class="container text-center sign_in ">
<h1 class="text-info"> Sign In </h1>

<%= form_tag sessions_path do %>
    <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name], class: "form-control length-restriction" %>
    </div>
   
    <div class="button">
    <%= submit_tag "Sign In" %>
    </div>
<% end %>
</div>