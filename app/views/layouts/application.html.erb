<!DOCTYPE html>
<html>
  <head>
    <title>LifestyleArticles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/e2597287a1.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-md bg-dark">
      <%= link_to 'RueMotors', root_path, class: "navbar-brand" %>
        <ul class="navbar-nav">
          <% categories.each do | category | %>
            <li class="nav-item"><%= link_to category.name, category, class: "nav-link" %></li>
          <% end %>
        </ul>
         
      <ul class="navbar-nav justify-content-end">
        <% if user_signed_in? %>
          <li class="nav-item"><%=link_to "Create Article", new_article_path %></li>
          <li class="nav-item"><%= link_to current_user.name, "#", class: 'username' %></li>
          <li class="nav-item"><%= link_to 'Sign out', sign_out_path %></li>
        <% else %>
          <li class="nav-item"><%= link_to "Sign up", new_user_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to 'Sign in', new_session_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
      
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
      <%= render 'layouts/footer' %> 
  </body>
</html>
