<div class="grid-container">
        <div class="featured" style="background-image: url(<%= main_image %>)">

        </div>
    <% @categories.includes(:articles).all.order(priority: 'DESC').each do |category| %>
        <div class="category" style="background-image: url(<%= category.articles.last.image %>)">
            <h3><%= link_to category.name, category, class: "text-white category-links" %></h3>
            <p class="title-links"><%= category.articles.last.title %></p>
        </div>
    <% end %>
</div>