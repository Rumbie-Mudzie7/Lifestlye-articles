<div class="grid-container">
        <div class="featured p-3" style="background-image: url(<%= main_image %>)">
          <div class="featured_text">
            <p class="icons1"><%= main_article_title%></p>
            <p>Votes: <%= count_votes %></>
          </div>
        </div>
    <% @categories.each do |category| %>
        <div class="category p-3" style="background-image: url(<%= category_article_image(category) %>)">
            <h3><%= link_to category.name, category, class: "text-success category-links" %></h3>
            <p class="title-links text-info"><%= truncate(last_article_title(category), length: 20, omission: "..." ) %></p>
        </div>
    <% end %>
</div>